@*Strong type views*@
@using Itlaflix.Core.Application.ViewModel.director;
@model List<DirectorViewModel>
@{
    ViewData["Title"] = "Directors";
}

<div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <a asp-controller="Director" asp-action="Create" type="button" class="btn btn-outline-success">Agregar un nuevo director</a>

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay directors agregadas</h2>
        }
        else
        {
            @foreach (Itlaflix.Core.Application.ViewModel.director.DirectorViewModel item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        
                            <div>
                                <a asp-controller="Director" asp-action="Delete" asp-all-route-id="@item.Id" type="button" class=" btn btn-outline-danger">Eliminar</a>
                                <a asp-controller="Director" asp-action="Edit" asp-all-route-id="@item.Id" type=" button" class=" btn btn-outline-warning">Editar</a>
                             </div>
                            
                        </div>
                </div>
            }
        }

    </div>
</div>