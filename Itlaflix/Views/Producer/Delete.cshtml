@using Itlaflix.Core.Application.ViewModel.producer
@model ProducerViewModel
@{
    ViewData["Title"] = "Eliminar Productor";
}

<div class="card text-center mb-3" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Esta seguro de eliminar este productor?</h5>
        <p class="card-text">
            Este productor será permanentemente eliminado de la base de datos:
            <br /> @Model.Name
            <br /> ID: @Model.Id
            @if (Model.ProducerMovies != null){
            foreach (var item in Model.ProducerMovies)
                {
                    var text = $"<br /> Peliculas que lo llevan: {item.Movie.Name}";
                    @Html.Raw(text)
                }
            }
            
            @if (Model.ProducerSeries != null){
            foreach (var item in Model.ProducerSeries)
            {
            var text = $"<br /> series que lo llevan: {item.Serie.Name}";
            @Html.Raw(text)
                }
            }

        </p>
        <form method="post" asp-controller="Producer" asp-action="DeletePost">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Producer" asp-action="Index" class="btn btn-primary">Cancelar</a>

        </form>
        
    </div>
</div>
