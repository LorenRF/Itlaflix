@*Strong type views*@
@using Itlaflix.Core.Application.ViewModel.producer;
@model List<ProducerViewModel>
@{
    ViewData["Title"] = "Productores";
}

<div class="container-fluid">
    <div class="w-75 mb-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <a asp-controller="Producer" asp-action="Create" type="button" class="btn btn-outline-success">Agregar un nuevo productor</a>
        </div>
        </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay productores agregadas</h2>
        }
        else
        {
            @foreach (Itlaflix.Core.Application.ViewModel.producer.ProducerViewModel item in Model)
            {
                        <div class="col">
                            <div class="card shadow-sm text-center">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    @{
                                        int id = item.Id;
                                    }
                            <div>
                                <a asp-controller="Producer" asp-action="Edit" asp-route-id="@id" type="button" class="btn btn-outline-primary">Ver</a>
                                <a asp-controller="Producer" asp-action="Delete" asp-route-id="@id" type="button" class=" btn btn-outline-danger">Eliminar</a>
                                <a asp-controller="Producer" asp-action="Edit" asp-route-id="@id" type=" button" class=" btn btn-outline-warning">Editar</a>
                             </div>
                         </div>
                    </div>
                </div>
            }
        }

    </div>
</div>