@* Strong type views *@
@using Itlaflix.Core.Application.ViewModel
@using Itlaflix.Core.Application.ViewModel.serie
@using Itlaflix.Core.Application.ViewModel.movie
@using Itlaflix.Core.Application.ViewModel.gender

@model List<SerieViewModel>
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid text-center">
    <div class="row">
    <p class="d-inline-flex gap-1">
            <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Filtros
        </button>
    </p>

    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <div class="card shadow-sm">
                <div class="card-body text-center" style="max-height: 300px; overflow-x: auto;">
                    <h6 class="card-title">Géneros</h6>
                    <form method="post" asp-controller="Home" asp-action="Index">
                        <div class="form-check form-check-inline">
                            <div class="form-check">
                                <input class="form-check-input" value="null" type="radio" name="GenderId" id="gender-all" />
                                <label class="form-check-label" for="gender-all">Todos</label>
                            </div>
                        </div>

                        @foreach (GenderViewModel gender in ViewBag.genderList)
                        {
                            <div class="form-check form-check-inline">
                                <div class="form-check">
                                        @*                 el atributo name se enlaza a la propiedad de la clase filtred con el mismo nombre
                                    *@
                                    <input class="form-check-input" value="@gender.Id" type="radio" name="GenderId" id="gender-@gender.Id" />
                                    <label class="form-check-label" for="gender-@gender.Id">@gender.Name</label>
                                </div>
                            </div>
                        }
                        <div class="text-center">
                                <button type="submit" class="btn btn-outline-success" style="margin: 20px 0 0 0;">Filtrar</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

        <div class="row">
            <h5 style="margin: 50px;">Series</h5>
    </div>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @if (Model == null || Model.Count == 0)
                {
                    <h2>No hay series agregadas que contengan este género</h2>
                }
                else
                {
                    @foreach (SerieViewModel item in Model)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                @{
                                    int id = item.Id;
                                }
                                <a asp-controller="Serie" asp-action="Watch" asp-route-id="@id" type="button" class="btn btn-outline-primary">
                                    <img class="bd-placeholder-img card-img-top" src="@item.image" />
                                </a>
                                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                    <h4>@item.Name</h4>
                                    <p class="card-text">@item.Description</p>
                                    <div class="">
                                        <small class="fw-bold fs-6">@item.director</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

    <div class="row">
        <h5 style="margin: 50px;">Peliculas</h5>
            </div>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @if (ViewBag.movieList == null || ViewBag.movieList.Count == 0)
                {
                    <h2>No hay Películas agregadas que contengan este género</h2>
                }
                else
                {
                    @foreach (MovieViewModel item in ViewBag.movieList)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                @{
                                    int id = item.Id;
                                }
                                <a asp-controller="Movie" asp-action="Watch" asp-route-id="@id" type="button" class="btn btn-outline-primary">
                                    <img class="bd-placeholder-img card-img-top" src="@item.imagePath" />
                                </a>
                                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                    <h4>@item.Name</h4>
                                    <p class="card-text">@item.Description</p>
                                    <div class="">
                                        <small class="fw-bold fs-6">@item.director</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
</div>
