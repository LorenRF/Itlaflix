@using Itlaflix.Core.Application.ViewModel.gender
@model GenderViewModel
@{
    ViewData["Title"] = "Eliminar Gender";
}

<div class="card text-center mb-3" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Esta seguro de eliminar este genero?</h5>
        <p class="card-text">Este genero será permanentemente eliminado de la base de datos.</p>
        <form method="post" asp-controller="Gender" asp-action="DeletePost">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Gender" asp-action="Index" class="btn btn-primary">Canselar</a>

        </form>
        
    </div>
</div>
