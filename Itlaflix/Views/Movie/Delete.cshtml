@using Itlaflix.Core.Application.ViewModel.movie;
@model MovieViewModel
@{
    ViewData["Title"] = "Eliminar pelicula";
}

<div class="card text-center mb-3" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Esta seguro de eliminar esta pelicula?</h5>
        <p class="card-text">Esta pelicula será permanentemente eliminada de la base de datos.</p>
        <form method="post" asp-controller="Movie" asp-action="DeletePost">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-primary">Canselar</a>

        </form>
        
    </div>
</div>
